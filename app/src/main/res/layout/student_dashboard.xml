<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationY="700dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/withoutbar"
        android:id="@+id/withoutbar"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ffe6d0"
        />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/bnhlogo"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:alpha="0"
        android:id="@+id/bnimage"
        />
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_circle"
        app:layout_constraintTop_toBottomOf="@id/bnimage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_marginTop="20dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:drawablePadding="20dp"
        />
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#fff5d0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="200dp"
        android:layout_marginTop="20dp"
        android:id="@+id/r1"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/homework"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="190dp"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/homework"
        />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#fff5d0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/r2"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/notice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="40dp"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/notice"
        />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#fff5d0"
        app:layout_constraintTop_toBottomOf="@id/r1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="200dp"
        android:layout_marginTop="20dp"
        android:id="@+id/r3"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/about_school"
        app:layout_constraintTop_toBottomOf="@id/homework"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="190dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/about"
        />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#fff5d0"
        app:layout_constraintTop_toBottomOf="@id/r2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/r4"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/galleryimg"
        app:layout_constraintTop_toBottomOf="@id/notice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="20dp"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/gallery"
        />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#fff5d0"
        app:layout_constraintTop_toBottomOf="@id/r3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="200dp"
        android:layout_marginTop="20dp"
        android:id="@+id/r5"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/feesimg"
        app:layout_constraintTop_toBottomOf="@id/about"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="190dp"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/fees"
        />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#fff5d0"
        app:layout_constraintTop_toBottomOf="@id/r4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/r6"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/contact_us"
        app:layout_constraintTop_toBottomOf="@id/gallery"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="20dp"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/contact"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/toolbar"
            android:id="@+id/toolbar"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationY="-350dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/withoutbar"
            android:id="@+id/withoutbar"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="625dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@id/feeamnt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#ffe6d0"
            android:id="@+id/rlt1"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toTopOf="@id/rlt1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#ffe6d0"
            android:id="@+id/rlt2"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/feelogo"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="45dp"
            android:alpha="0"
            android:id="@+id/feeslogo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:text="Fees"
            android:layout_marginTop="10dp"
            android:textSize="35sp"
            android:textColor="#000000"
            android:fontFamily="@font/aliceregular"
            android:textStyle="bold"
            android:alpha="0"
            android:id="@+id/feetitle"
            />

        <ImageView
            android:layout_width="500dp"
            android:layout_height="400dp"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@id/feeslogo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/feeamount"
            android:id="@+id/feeamnt"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/feeamnt"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="100dp"
            android:background="#ffe6d0"
            android:id="@+id/c1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="100dp"
                android:layout_marginStart="20dp"
                android:textColor="#000000"
                android:fontFamily="@font/aliceregular"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Fee Deposit Rules"
                android:gravity="bottom"
                android:id="@+id/fhead"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fhead"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/aliceregular"
                android:text="@string/p1"
                android:id="@+id/p1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/p1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/aliceregular"
                android:text="@string/p2"
                android:id="@+id/p2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/p2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/aliceregular"
                android:text="@string/p3"
                android:id="@+id/p3"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/p3"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/aliceregular"
                android:text="@string/p4"
                android:id="@+id/p4"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/p4"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/aliceregular"
                android:text="@string/p5"
                android:id="@+id/p5"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/p5"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/aliceregular"
                android:text="@string/p6"
                android:id="@+id/p6"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/p6"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/aliceregular"
                android:text="@string/p9"
                android:id="@+id/p9"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/p9"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:textColor="#000000"
                android:textSize="25sp"
                android:fontFamily="@font/aliceregular"
                android:text="@string/p7"
                android:id="@+id/p7"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/p7"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:textColor="#2f52a4"
                android:textSize="25sp"
                android:fontFamily="@font/aliceregular"
                android:text="@string/phn"
                android:id="@+id/p8"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>